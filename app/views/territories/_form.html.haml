= form_for @territory do |f|
  - if @territory.errors.any?
    #error_explanation
      %h2= "#{pluralize(@territory.errors.count, "error")} prohibited this territory from being saved:"
      %ul
        - @territory.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :code
    = f.text_field :code
  .field
    = f.label :sales_rep_id
    = f.dropdown :sales_rep_id
  .actions
    = f.submit 'Save'
