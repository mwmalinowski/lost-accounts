= form_for @sales_rep do |f|
  - if @sales_rep.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sales_rep.errors.count, "error")} prohibited this sales_rep from being saved:"
      %ul
        - @sales_rep.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
